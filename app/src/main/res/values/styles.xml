<resources>
    <!-- Custom style for MaterialTextView titles -->
    <style name="AppTitleText" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Custom style for section headers -->
    <style name="AppSectionHeader" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Custom style for MaterialButton -->
    <style name="AppButton" parent="Widget.Material3.Button">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>