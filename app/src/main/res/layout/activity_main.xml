<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:colorBackground">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/your_root_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:background="@android:color/transparent"
            android:focusableInTouchMode="true">

            <!-- Theme toggle (top-right, always visible, with padding) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingRight="8dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/themeToggleButton"
                    style="@style/Widget.Material3.Button.Icon"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:text="☀️"
                    android:textSize="28sp"
                    android:contentDescription="Toggle dark or light theme"
                    android:backgroundTint="?attr/colorSurface"
                    android:elevation="6dp"
                    android:padding="0dp"
                    app:cornerRadius="28dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/aboutButton"
                    style="@style/Widget.Material3.Button.Icon"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:text="ℹ️"
                    android:textSize="28sp"
                    android:contentDescription="About this app"
                    android:backgroundTint="?attr/colorSurface"
                    android:elevation="6dp"
                    android:padding="0dp"
                    app:cornerRadius="28dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?attr/colorSurfaceVariant"
                android:layout_marginBottom="12dp" />

            <!-- Welcome -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="18dp"
                app:cardElevation="6dp"
                app:strokeColor="?attr/colorPrimary"
                app:strokeWidth="1dp"
                android:layout_marginBottom="24dp">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/user_name_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="28dp"
                    android:text="Welcome!"
                    android:textColor="?android:textColorPrimary"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:lineSpacingExtra="4dp" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Timer & Status -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/timerText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Remaining: -- sec"
                        android:textSize="18sp"
                        android:lineSpacingExtra="4dp"
                        android:paddingBottom="6dp" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/statusText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Status"
                        android:textSize="18sp"
                        android:lineSpacingExtra="4dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Available Devices -->
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Available Devices"
                android:textStyle="bold"
                android:textSize="19sp"
                android:paddingTop="10dp"
                android:paddingBottom="8dp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="1dp"
                android:layout_marginBottom="20dp">

                <ListView
                    android:id="@+id/deviceListView"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:dividerHeight="1dp"
                    android:background="?attr/colorSurface"
                    android:contentDescription="List of nearby devices" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Transfer Progress -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="1dp"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:id="@+id/progressSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:padding="16dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/progressText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Transfer Progress: 0%"
                        android:textSize="16sp"
                        android:paddingBottom="8dp" />

                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/transferProgressBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="100"
                        android:progress="0"
                        app:indicatorColor="?attr/colorPrimary"
                        app:trackColor="?attr/colorSurfaceVariant" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Files to Sync -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/filesToSyncSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:cardCornerRadius="12dp"
                app:cardElevation="1dp"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Files to Sync"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        android:paddingBottom="8dp" />

                    <ListView
                        android:id="@+id/fileListRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:background="?attr/colorSurface"
                        android:contentDescription="List of files queued for sync"
                        android:layout_marginBottom="8dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="30dp"
                android:weightSum="3">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/transferButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    android:text="Start Transfer"
                    style="@style/Widget.Material3.Button"
                    android:textSize="15sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/syncButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="6dp"
                    android:text="Sync to Cloud"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:textSize="15sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/dockingButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    android:text="Start Docking"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:textSize="15sp" />
            </LinearLayout>

            <!-- Docking Hours Section -->
            <LinearLayout
                android:id="@+id/dockingHoursSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/dockingHoursText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Docking hours: 20:00 - 09:00"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:paddingEnd="12dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/changeDockingHoursButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change"
                    android:textSize="16sp"
                    android:icon="@android:drawable/ic_menu_edit"
                    app:iconPadding="8dp"
                    android:contentDescription="Change docking hours"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
